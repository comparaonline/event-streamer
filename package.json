{
  "scripts": {
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "pretest": "yarn tslint",
    "compile": "tsc --outDir ./build",
    "prepublish": "yarn compile",
    "clean": "rm -rf build/*",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "src(/.*)?/__tests__/[^/]*\\.(ts|tsx|js)$",
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts?(x),js?(x)}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**/*.*"
    ]
  },
  "name": "event-streamer",
  "version": "0.0.5",
  "description": "Simple event-streaming framework",
  "keywords": [
    "comparaonline",
    "microservice",
    "framework"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "private": false,
  "author": {
    "name": "Ezequiel Rabinovich",
    "email": "erabinovich@gmail.com",
    "url": "https://github.com/warseph"
  },
  "files": [
    "build"
  ],
  "repository": "comparaonline/event-streamer",
  "devDependencies": {
    "@types/config": "^0.0.33",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.58",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "rxjs-marbles": "^2.2.0",
    "ts-jest": "^21.2.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "node-rdkafka": "^2.2.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.3"
  }
}
