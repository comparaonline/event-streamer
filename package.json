{
  "name": "@comparaonline/event-streamer",
  "version": "9.0.0-alpha.0",
  "description": "Simple event-streaming framework",
  "repository": "comparaonline/event-streamer",
  "author": {
    "name": "Rodrigo D. Cabral",
    "email": "rcabral@comparaonline.com",
    "url": "https://github.com/rcabralyu"
  },
  "contributors": [],
  "license": "MIT",
  "engines": {
    "node": ">=14.17.0"
  },
  "keywords": [
    "comparaonline",
    "microservice",
    "kafka",
    "schema-registry",
    "confluent",
    "zod",
    "events"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "bin": {
    "event-streamer-cli": "build/cli/index.js"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --fix",
    "test": "jest --runInBand",
    "test:unit": "jest --runInBand",
    "test:integration": "RUN_INTEGRATION_TESTS=true jest --config=jest.integration.config.js --runInBand --forceExit",
    "test:schema-registry": "jest src/schema-registry --runInBand",
    "test:integration:sr": "RUN_INTEGRATION_TESTS=true jest src/schema-registry/__tests__/integration.test.ts --runInBand",
    "test:evolution": "RUN_INTEGRATION_TESTS=true jest src/schema-registry/__tests__/schema-evolution.test.ts --runInBand",
    "test:mixed": "RUN_INTEGRATION_TESTS=true jest src/schema-registry/__tests__/mixed-formats.test.ts --runInBand",
    "test:all": "RUN_INTEGRATION_TESTS=true jest --config=jest.all.config.js --runInBand",
    "test:cli": "jest src/cli/__tests__ --runInBand",
    "pretest": "yarn lint",
    "test-consumer": "ts-node src/local-tests/consumer.ts",
    "test-producer": "ts-node src/local-tests/producer.ts",
    "docker:up": "docker-compose up -d --wait",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose up -d --wait && npm run test:unit && docker-compose down",
    "docker:test:integration": "docker-compose up -d --wait && npm run test:integration && docker-compose down",
    "docker:test:all": "docker-compose up -d --wait && npm run test:unit && RUN_INTEGRATION_TESTS=true npm run test:integration && docker-compose down",
    "cli:publish": "node build/cli/index.js publish",
    "cli:validate": "node build/cli/index.js validate",
    "cli:init": "node build/cli/index.js init"
  },
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.9.0",
    "ajv": "^7.2.4",
    "ajv-formats": "^1.6.1",
    "commander": "^14.0.1",
    "kafkajs": "^2.2.4",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@comparaonline/test-helpers": "^1.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "mockdate": "^3.0.5",
    "nock-utils": "^0.3.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
