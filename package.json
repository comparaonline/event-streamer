{
  "name": "@comparaonline/event-streamer",
  "version": "0.2.7",
  "description": "Simple event-streaming framework",
  "repository": "comparaonline/event-streamer",
  "keywords": [
    "comparaonline",
    "microservice",
    "framework"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "private": false,
  "author": {
    "name": "Ezequiel Rabinovich",
    "email": "erabinovich@gmail.com",
    "url": "https://github.com/warseph"
  },
  "files": [
    "build"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "pretest": "yarn tslint",
    "compile": "tsc --outDir ./build",
    "prepublish": "yarn compile",
    "clean": "rm -rf build/*",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "src(/.*)?/__tests__/[^/]*\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "collectCoverageFrom": [
      "src/**/*.{ts?(x),js?(x)}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**/*.*"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^8.10.2",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "nodemon": "^1.17.3",
    "rxjs-marbles": "^2.3.3",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.4.2",
    "typescript": "^2.8.1"
  },
  "dependencies": {
    "node-rdkafka": "^2.2.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.3"
  }
}
