{
  "name": "@comparaonline/event-streamer",
  "version": "9.0.0-alpha.0",
  "description": "Simple event-streaming framework",
  "repository": "comparaonline/event-streamer",
  "author": {
    "name": "Rodrigo D. Cabral",
    "email": "rcabral@comparaonline.com",
    "url": "https://github.com/rcabralyu"
  },
  "contributors": [],
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "keywords": [
    "comparaonline",
    "microservice",
    "kafka",
    "schema-registry",
    "confluent",
    "zod",
    "events"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "bin": {
    "event-streamer-cli": "build/cli/index.js"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --fix",
    "test": "vitest run --exclude \"**/*.integration.test.ts\"",
    "test:integration": "vitest run \"src/**/*.integration.test.ts\"",
    "test:all": "vitest run",
    "coverage": "vitest run --coverage",
    "test:cli": "vitest run \"src/cli/__tests__/**/*.test.ts\"",
    "pretest": "pnpm lint",
    "test-consumer": "ts-node src/local-tests/consumer.ts",
    "test-producer": "ts-node src/local-tests/producer.ts",
    "docker:up": "docker compose up -d --wait",
    "docker:down": "docker compose down",
    "docker:test": "docker compose up -d --wait && pnpm run test:unit && docker compose down",
    "docker:test:integration": "docker compose up -d --wait && pnpm run test:integration && docker compose down",
    "docker:test:all": "docker compose up -d --wait && pnpm run test:unit && RUN_INTEGRATION_TESTS=true pnpm run test:integration && docker compose down",
    "cli:publish": "node build/cli/index.js publish",
    "cli:validate": "node build/cli/index.js validate",
    "cli:init": "node build/cli/index.js init"
  },
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.9.0",
    "ajv": "^7.2.4",
    "ajv-formats": "^1.6.1",
    "commander": "^14.0.1",
    "fast-glob": "^3.3.3",
    "jiti": "^2.6.1",
    "kafkajs": "^2.2.4",
    "p-limit": "^7.1.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "mockdate": "^3.0.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
